@using MemberManagerLibrary;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div>
    <h2>Members Page</h2>

    <a class="btn btn-success" 
        asp-area="" 
        asp-controller="Member" 
        asp-action="Add">Add Member
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Member member in ViewBag.Members)
            {
                <tr>
                    <td>
                        <a 
                            asp-area="" 
                            asp-controller="Member" 
                            asp-action="Detail" 
                            asp-route-id="@member.Id"
                            asp-route-test="Xxxx">
                            @member.Id
                        </a>
                    </td>
                    <td>@member.Name</td>
                    <td>@member.Email</td>
                    <td>@member.Active</td>
                    <td>
                        <a 
                            class="btn btn-danger"
                            asp-area="" 
                            asp-controller="Member"
                            asp-action="Delete"
                            asp-route-id="@member.Id">
                            Delete
                        </a>
                        <a
                            class="btn btn-primary"
                            asp-area=""
                            asp-controller="Member"
                            asp-action="Edit"
                            asp-route-id="@member.Id">
                            Edit
                        </a> 
                            

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
