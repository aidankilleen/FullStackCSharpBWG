@{
}

<div>
    <h2>Members Page</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in ViewBag.Members)
            {
                <tr class="@(member.Active ? "active" : "inactive")">
                    <td>@member.Id</td>
                    <td>@member.Name</td>
                    <td>@member.Email</td>
                    <td>@(member.Active ? "Active" : "Inactive")</td>
                </tr>
            }
        </tbody>
    </table>

</div>
